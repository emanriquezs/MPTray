<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="MPTray.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MPTray"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MPTray"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="controls:SettingsCard">
                <Setter Property="Margin" Value="1.5" />
            </Style>
            <Style TargetType="controls:SettingsExpander">
                <Setter Property="Margin" Value="1.5" />
            </Style>
            <Style TargetType="ColorPicker">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,16,0,-32"/>
            </Style>
        </Grid.Resources>
        <NavigationView
            Grid.Row="1"
            Margin="12"
            BorderThickness="0"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                <Thickness x:Key="NavigationViewContentGridBorderThickness">0</Thickness>
                <Thickness x:Key="NavigationViewBorderThickness">0</Thickness>
            </NavigationView.Resources>
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Плеер"
                    IsSelected="True"
                    Tag="player" />
                <NavigationViewItem Content="Приложение" Tag="app" />
            </NavigationView.MenuItems>
            <Grid>
                <Grid x:Name="PlayerSection">
                    <ScrollViewer>
                        <StackPanel Padding="12">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Text="Общее" />
                            <controls:SettingsCard Description="Выберите один из предложенных стилей плеера" Header="Стиль">
                                <ComboBox>
                                    <ComboBoxItem Content="Windows 11" IsSelected="True" />
                                    <ComboBoxItem Content="Windows 10" />
                                </ComboBox>
                            </controls:SettingsCard>
                            <controls:SettingsCard Description="Цветовое оформление плеера" Header="Тема">
                                <ComboBox>
                                    <ComboBoxItem Content="Светлая" IsSelected="True" />
                                    <ComboBoxItem Content="Темная" />
                                    <ComboBoxItem Content="Система" />
                                </ComboBox>
                            </controls:SettingsCard>

                            <TextBlock
                                Margin="0,20,0,4"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Text="Расширенные настройки" />
                            <TextBlock
                                Margin="0,0,0,4"
                                FontWeight="SemiBold"
                                Text="Цвета" />
                            <controls:SettingsCard Description="Задний фон плеера" Header="Фон">
                                <ComboBox>
                                    <ComboBoxItem Content="Mica" IsSelected="True" />
                                    <ComboBoxItem Content="MicaAlt" />
                                    <ComboBoxItem Content="Акрил" />
                                    <ComboBoxItem Content="Цвет трека" />
                                </ComboBox>
                            </controls:SettingsCard>
                            <controls:SettingsExpander Header="Акцентный цвет" >
                                <controls:SettingsExpander.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Margin="0,0,10,0"
                                            CornerRadius="4">
                                        </Button>
                                        <ComboBox>
                                            <ComboBoxItem Content="Как в системе" IsSelected="True" />
                                            <ComboBoxItem Content="Свой" />
                                        </ComboBox>
                                    </StackPanel>
                                </controls:SettingsExpander.Content>
                                <controls:SettingsExpander.ItemsHeader>
                                    <Grid Background="White">
                                        <ColorPicker Orientation="Horizontal" IsEnabled="False" />
                                    </Grid>
                                </controls:SettingsExpander.ItemsHeader>
                            </controls:SettingsExpander>
                            <controls:SettingsExpander Header="Цвет ползунка">
                                <controls:SettingsExpander.ItemsHeader>
                                    <Grid Background="White">
                                        <ColorPicker Orientation="Horizontal" IsEnabled="False" />
                                    </Grid>
                                </controls:SettingsExpander.ItemsHeader>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,10,0"
                                        CornerRadius="4" />
                                    <ComboBox>
                                        <ComboBoxItem Content="Акцентный цвет" IsSelected="True" />
                                        <ComboBoxItem Content="Свой" />
                                    </ComboBox>
                                </StackPanel>
                            </controls:SettingsExpander>
                            <controls:SettingsExpander Description="Цвет рамки вокруг обложки трека" Header="Цвет рамки">
                                <controls:SettingsExpander.ItemsHeader>
                                    <Grid Background="White">
                                        <ColorPicker Orientation="Horizontal" IsEnabled="False" />
                                    </Grid>
                                </controls:SettingsExpander.ItemsHeader>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,10,0"
                                        CornerRadius="4" />
                                    <ComboBox>
                                        <ComboBoxItem Content="Акцентный цвет" IsSelected="True" />
                                        <ComboBoxItem Content="Свой" />
                                    </ComboBox>
                                </StackPanel>
                            </controls:SettingsExpander>

                            <TextBlock
                                Margin="0,20,0,4"
                                FontWeight="SemiBold"
                                Text="Элементы" />
                            <controls:SettingsCard Header="Ползунок">
                                <ToggleSwitch
                                    IsOn="{x:Bind SettingsVM.IsSliderOn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    OffContent=""
                                    OnContent="" />
                            </controls:SettingsCard>
                            <controls:SettingsCard Description="Рамка вокруг обложки трека" Header="Рамка">
                                <ToggleSwitch
                                    IsOn="{x:Bind SettingsVM.IsCoverBorderOn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    OffContent=""
                                    OnContent="" />
                            </controls:SettingsCard>
                            <controls:SettingsCard Header="Тень обложки">
                                <ToggleSwitch
                                    IsOn="{x:Bind SettingsVM.IsCoverShadowOn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    OffContent=""
                                    OnContent=""/>
                            </controls:SettingsCard>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                <Grid x:Name="AppSection" Visibility="Collapsed">
                    <TextBlock Text="app" />
                </Grid>
            </Grid>
        </NavigationView>
    </Grid>
</Window>
